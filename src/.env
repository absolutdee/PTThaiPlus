# Application Configuration
NODE_ENV=development
PORT=3001
APP_NAME=FitConnect
APP_VERSION=1.0.0

# JWT Configuration
JWT_SECRET=fitconnect-super-secret-key-2024-development
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=fitconnect-refresh-secret-key-2024
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration (MySQL)
# ⚠️ แก้ไขข้อมูลเหล่านี้ให้ตรงกับ MySQL ของคุณ
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=fitconnect_db

# Database Pool Configuration
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_RECONNECT=true

# Development Mode (ใช้ mock data แทน database)
USE_MOCK_DATA=true
SKIP_DATABASE=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# File Upload Configuration
UPLOAD_PATH=./server/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Email Service Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Service Configuration (Optional)
SMS_API_KEY=your_sms_api_key
SMS_SENDER=FitConnect

# Payment Gateway Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
OMISE_SECRET_KEY=skey_test_your_omise_secret_key
OMISE_PUBLIC_KEY=pkey_test_your_omise_public_key

# Social Login Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret

# Redis Configuration (Optional - for sessions/caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=fitconnect-session-secret-2024
SESSION_MAX_AGE=86400000

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# API Documentation
API_DOCS_ENABLED=true
API_DOCS_PATH=/docs

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/api/health