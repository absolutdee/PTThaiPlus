# ===========================================
# FitConnect Backend Environment Variables
# ===========================================

# Application Settings
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=fitconnect-super-secret-key-2024-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=fitconnect-refresh-secret-key-2024-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration (if using real database)
# MongoDB
MONGODB_URI=mongodb://localhost:27017/fitconnect
# or MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/fitconnect

# MySQL (alternative)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=password
# DB_NAME=fitconnect

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
# For Gmail, use App Password instead of regular password
# https://support.google.com/accounts/answer/185833

# File Upload Configuration
MAX_FILE_SIZE=5242880
# 5MB = 5 * 1024 * 1024 bytes
MAX_FILES_PER_UPLOAD=12
UPLOAD_DIR=uploads

# Security Settings
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-here
COOKIE_SECRET=your-cookie-secret-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes = 15 * 60 * 1000 ms
RATE_LIMIT_MAX_REQUESTS=100

# API Keys (for external services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# LINE API (for LINE notifications)
LINE_CHANNEL_ACCESS_TOKEN=your-line-channel-access-token
LINE_CHANNEL_SECRET=your-line-channel-secret

# Payment Gateway (example: Omise, 2C2P, etc.)
PAYMENT_PUBLIC_KEY=your-payment-public-key
PAYMENT_SECRET_KEY=your-payment-secret-key
PAYMENT_WEBHOOK_SECRET=your-payment-webhook-secret

# Cloud Storage (if using cloud)
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=fitconnect-uploads

# Google Cloud Storage
# GOOGLE_CLOUD_PROJECT_ID=your-project-id
# GOOGLE_CLOUD_KEYFILE=path/to/keyfile.json
# GOOGLE_CLOUD_BUCKET=fitconnect-uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Webhook URLs
WEBHOOK_URL=https://your-domain.com/webhooks
PAYMENT_WEBHOOK_URL=https://your-domain.com/api/webhooks/payment

# Admin Configuration
ADMIN_EMAIL=admin@fitconnect.com
ADMIN_PASSWORD=change-this-admin-password
SUPER_ADMIN_KEY=super-secret-admin-key-2024

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_PAYMENT_GATEWAY=true
ENABLE_GOOGLE_AUTH=false
ENABLE_LINE_AUTH=false

# Development Settings
DEBUG=true
VERBOSE_LOGGING=true
MOCK_EXTERNAL_APIS=true

# Production Settings (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# VERBOSE_LOGGING=false
# MOCK_EXTERNAL_APIS=false