# ================================
# Server Configuration
# ================================
NODE_ENV=development
PORT=3001
BASE_URL=http://localhost:3001

# ================================
# Frontend Configuration
# ================================
FRONTEND_URL=http://localhost:3000

# ================================
# Database Configuration
# ================================
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=fitconnect_db

# ================================
# Authentication
# ================================
JWT_SECRET=fitconnect-super-secret-key-2024-change-in-production
JWT_EXPIRES_IN=7d

# ================================
# Email Configuration (Nodemailer)
# ================================
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ================================
# File Upload Configuration
# ================================
UPLOAD_MAX_SIZE=10MB
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf
UPLOAD_PATH=./server/uploads

# ================================
# Payment Gateway Configuration
# ================================
# Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PromptPay
PROMPTPAY_MERCHANT_ID=your_merchant_id
PROMPTPAY_API_KEY=your_api_key

# Omise
OMISE_PUBLIC_KEY=pkey_test_your_omise_public_key
OMISE_SECRET_KEY=skey_test_your_omise_secret_key

# ================================
# Third-party Services
# ================================
# Google APIs
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Line
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret

# ================================
# Cloud Storage (Optional)
# ================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=fitconnect-uploads

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_KEYFILE=path/to/keyfile.json
GOOGLE_CLOUD_BUCKET=fitconnect-uploads

# ================================
# Analytics & Monitoring
# ================================
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
FACEBOOK_PIXEL_ID=FB-XXXXXXXXX

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# Session Configuration
# ================================
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# ================================
# Logging
# ================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ================================
# SSL Configuration (Production)
# ================================
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key

# ================================
# Redis Configuration (Optional)
# ================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================
# WebSocket Configuration
# ================================
WEBSOCKET_PORT=3002
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# ================================
# Development Tools
# ================================
DEBUG=fitconnect:*
MOCK_PAYMENTS=true
MOCK_EMAILS=true

# ================================
# Production Specific
# ================================
# HTTPS=true
# DOMAIN=fitconnect.com
# CDN_URL=https://cdn.fitconnect.com