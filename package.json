{
  "name": "fitconnect-backend",
  "version": "1.0.0",
  "description": "FitConnect Backend API Server",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint server/ --ext .js",
    "lint:fix": "eslint server/ --ext .js --fix",
    "prettier": "prettier --write server/**/*.js",
    "build": "echo 'No build step required for backend'",
    "migrate": "node server/database/migrate.js",
    "seed": "node server/database/seed.js",
    "db:reset": "npm run migrate && npm run seed",
    "production": "NODE_ENV=production node server/index.js",
    "docker:build": "docker build -t fitconnect-backend .",
    "docker:run": "docker run -p 3001:3001 fitconnect-backend"
  },
  "keywords": [
    "fitness",
    "trainer",
    "api",
    "nodejs",
    "express",
    "mysql"
  ],
  "author": "FitConnect Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "sharp": "^0.32.4",
    "socket.io": "^4.7.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/absolutdee/PTThaiPlus.git"
  },
  "bugs": {
    "url": "https://github.com/absolutdee/PTThaiPlus/issues"
  },
  "homepage": "https://github.com/absolutdee/PTThaiPlus#readme"
}
